<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>chengyu</display-name>
  <welcome-file-list>
    <welcome-file>/pages/index.html</welcome-file>
    <welcome-file>/pages/index.htm</welcome-file>
    <welcome-file>/pages/index.jsp</welcome-file>
  </welcome-file-list>
 <servlet>
    <servlet-name>LoginControl</servlet-name>
    <servlet-class>chengyu.action.LoginControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginControl</servlet-name>
    <url-pattern>/pages/LoginControl</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>modifyCusControl</servlet-name>
    <servlet-class>chengyu.action.CustomerModifyControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>modifyCusControl</servlet-name>
    <url-pattern>/pages/modifyCusControl</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>chengyu.action.RegisterControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/pages/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>chengyu.action.actionControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/pages/action</url-pattern>
  </servlet-mapping>     
  
  <filter>
    <filter-name>CharFilter</filter-name>
    <filter-class>chengyu.utils.CharsetFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
</web-app>